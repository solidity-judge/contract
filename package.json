{
  "name": "@solidity-judge/sdk",
  "author": "Thuc Le",
  "version": "1.0.0",
  "description": "Solidity judge SDK",
  "homepage": "https://github.com/solidity-judge/contract",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/solidity-judge/contract.git"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prettier": "prettier --write '{src,scripts}/**/*.{sol,js,ts}'",
    "prettier:list": "prettier --list-different '{src,scripts}/**/*.{sol,js,ts}'",
    "prettier:check": "prettier --check '{src,scripts}/**/*.{sol,js,ts}'",
    "solhint": "solhint --config ./.solhint.json 'src/**/*.sol' --fix",
    "solhint:check": "solhint --config ./.solhint.json 'src/**/*.sol'",
    "lint": "yarn prettier && yarn solhint",
    "lint:check": "yarn prettier:check && yarn solhint:check",
    "build": "tsdx build --tsconfig tsconfig.build.json --entry src/SDK/index.ts"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.6",
    "tsdx": "^0.14.1"
  },
  "dependencies": {
    "@nomicfoundation/hardhat-network-helpers": "^1.0.7",
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-etherscan": "^2.1.8",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "4.7.3",
    "@openzeppelin/contracts-upgradeable": "4.7.3",
    "@typechain/ethers-v5": "^9.0.0",
    "@typechain/hardhat": "^4.0.0",
    "@types/mocha": "^8.2.2",
    "@types/node": "^17.0.0",
    "bignumber.js": "^9.1.1",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-mocha": "^10.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "ethereum-waffle": "^3.4.4",
    "ethereumjs-abi": "^0.6.8",
    "ethereumjs-util": "^7.1.5",
    "ethers": "^5.7.2",
    "graphql-request": "^5.1.0",
    "hardhat": "^2.12.4",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^4.9.4"
  },
  "resolutions": {
    "**/typescript": "^4.9.4"
  }
}
