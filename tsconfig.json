{
    "compilerOptions": {
        "experimentalDecorators": true,
        "removeComments": true,
        "sourceMap": true,
        "incremental": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strict": true
    },
    "include": ["src/**/*", "scripts/**/*"]
}
